        matchCards.forEach((card) => {
            const id = card.getAttribute("data-match-id") || "";
            const okSaved = !showSavedOnly || saved.has(id);
            const okQuery = matchesQuery(card, q);
            const show = okSaved && okQuery;
            card.style.display = show ? "" : "none";
            if (show) visible += 1;
        });

        if (matchCount) {
            matchCount.textContent = isSpanish()
                ? `${visible} visibles`
                : `${visible} shown`;
        }
    };

    document.addEventListener("click", (e) => {
        const target = e.target;
        if (!(target instanceof Element)) return;
        const btn = target.closest(
            "[data-save-match]",
        ) as HTMLButtonElement | null;
        if (!btn) return;
        const card = btn.closest("[data-match-card]") as HTMLElement | null;
        if (!card) return;
        const id = card.getAttribute("data-match-id") || "";
        if (!id) return;

        if (saved.has(id)) saved.delete(id);
        else saved.add(id);
        writeSaved(saved);
        updateSaveButtons();
        applyFilters();
    });

    if (savedToggle) {
        savedToggle.addEventListener("click", () => {
            showSavedOnly = !showSavedOnly;
            updateSaveButtons();
            applyFilters();
            (window as any).rgTrack?.("matches_saved_toggle", {
                enabled: showSavedOnly,
            });
        });
    }

    if (searchInput) {
        let t: number;
        searchInput.addEventListener("input", () => {
            window.clearTimeout(t);
            t = window.setTimeout(() => {
                applyFilters();
                (window as any).rgTrack?.("matches_search", {
                    q: searchInput.value.slice(0, 80),
                });
            }, 180);
        });
    }

    document.addEventListener("rg:lang", () => {
        setSearchPlaceholder();
        applyFilters();
    });

    setSearchPlaceholder();
    updateSaveButtons();
    applyFilters();
</script>
