---
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionShell from "../components/SectionShell.astro";
---

<BaseLayout title="Robgrappler | Enter The Mat">
    <div class="relative">
        <!-- Hero Section -->
        <section
            class="relative min-h-[90vh] flex items-center justify-center overflow-hidden bg-brand-black"
        >
            <!-- Background Logic -->
            <div class="absolute inset-0 z-0">
                <img
                    src="/images/mainpic.webp"
                    alt="Background"
                    class="object-cover object-[50%_20%] w-full h-full opacity-40 mix-blend-overlay animate-slow-scan"
                    onerror="this.style.display='none'; document.getElementById('hero-fallback').classList.remove('hidden');"
                />
                <div
                    id="hero-fallback"
                    class="hidden absolute inset-0 bg-gradient-to-br from-brand-purple via-brand-black to-black opacity-80"
                >
                </div>
                <div
                    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-brand-purple rounded-full blur-[120px] opacity-20 pointer-events-none"
                >
                </div>
            </div>

            <div class="relative z-10 text-center px-4 max-w-5xl mx-auto mt-10">
                <div
                    class="inline-block mb-4 px-3 py-1 border border-brand-gold/30 rounded-full bg-brand-gold/5 backdrop-blur-sm"
                >
                    <span
                        class="text-brand-gold text-xs font-bold tracking-[0.2em] uppercase animate-pulse-slow"
                        >Private Match Archive // Secure</span
                    >
                </div>

                <!-- Headline with Bone Color & Golden Dot -->
                <div class="relative overflow-hidden py-4">
                    <div class="rg-scanline"></div>
                    <h1
                        class="text-6xl md:text-8xl lg:text-9xl font-bebas text-brand-bone leading-[0.9] mb-6 glitch-text"
                        data-text="Underground Grappling."
                    >
                        Underground<br />
                        <span
                            class="text-transparent bg-clip-text bg-gradient-to-r from-brand-bone to-gray-600"
                            >Grappling</span
                        ><span
                            class="text-brand-gold drop-shadow-[0_0_15px_rgba(245,194,101,1)]"
                            >.</span
                        >
                    </h1>
                </div>

                <p
                    class="text-gray-400 text-lg md:text-xl max-w-2xl mx-auto mb-10 font-light"
                >
                    No scripts. No fluff. Just raw pressure and technical
                    dominance. <br class="hidden md:block" /> Access the uncensored
                    library of high-level submission wrestling.
                </p>

                <div
                    class="flex flex-col md:flex-row gap-4 justify-center items-center"
                >
                    <!-- Brutalist Primary -->
                    <a
                        href="#pricing"
                        class="btn-brutal transition-all duration-300 w-full md:w-auto px-8 py-4 bg-brand-gold border-2 border-brand-gold text-brand-black font-bebas text-xl tracking-wide rounded-none hover:bg-white hover:border-white shadow-[6px_6px_0px_0px_#FFFFFF] hover:shadow-[2px_2px_0px_0px_#FFFFFF] hover:translate-x-[4px] hover:translate-y-[4px]"
                    >
                        Watch Full Matches
                    </a>
                    <!-- Brutalist Secondary -->
                    <a
                        href="#matches"
                        class="btn-brutal w-full md:w-auto px-8 py-4 border-2 border-brand-gold text-brand-bone font-bebas text-xl bg-transparent shadow-[6px_6px_0px_0px_#F5C265] hover:bg-brand-gold hover:text-brand-black hover:shadow-[2px_2px_0px_0px_#FFFFFF] hover:translate-x-[4px] hover:translate-y-[4px]"
                    >
                        Browse Library
                    </a>
                </div>

                <!-- Trust Badges (Golden Bullets) -->
                <div
                    class="mt-12 flex flex-wrap justify-center gap-8 text-gray-500 text-xs uppercase tracking-widest font-semibold"
                >
                    <div class="flex items-center gap-2">
                        <span class="text-brand-gold text-xl">•</span>
                        No Scripts
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="text-brand-gold text-xl">•</span>
                        Secure Payment
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="text-brand-gold text-xl">•</span>
                        HD 60fps
                    </div>
                </div>
            </div>
        </section>

        {/* Featured matches */}
        <section
            class="relative z-10 border-t border-brand-purple/60 bg-brand-black"
        >
            <SectionShell
                id="matches"
                eyebrow="Matches"
                heading="Featured matches"
                kicker="Latest uploads from the mat. No tourists, no choreography—just pressure."
                sectionClass="pt-16 pb-20 sm:pt-20 sm:pb-24"
            >
                <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                    {/* Match 1 */}
                    <div
                        class="group bg-[#0A0A10] border border-white/10 rounded-none flex flex-col h-full transition-all duration-300 hover:border-brand-gold/50"
                    >
                        <div class="relative aspect-video overflow-hidden">
                            <img
                                src="/images/thumb_brutal.jpg"
                                alt="Robgrappler vs Nocturmex 3"
                                class="absolute inset-0 h-full w-full object-cover opacity-80 transition-all duration-500 group-hover:opacity-100 group-hover:scale-[1.03]"
                            />
                            <div
                                class="absolute inset-x-0 bottom-0 h-24 bg-gradient-to-t from-black/80 to-transparent"
                            >
                            </div>
                            <div
                                class="absolute bottom-3 right-3 rounded bg-black/80 px-2 py-1 text-[0.7rem] font-semibold tracking-[0.2em] uppercase text-zinc-200 shadow-[2px_2px_0px_0px_#000]"
                            >
                                24:10
                            </div>
                            <div
                                class="absolute top-2 right-2 bg-brand-gold text-brand-black text-[0.6rem] font-bold px-2 py-1 rounded-none shadow-[2px_2px_0px_0px_#000] uppercase tracking-wider"
                            >
                                New release
                            </div>
                        </div>
                        <div class="flex flex-1 flex-col p-6">
                            <div
                                class="flex flex-wrap gap-2 text-[0.6rem] font-semibold tracking-[0.24em] uppercase mb-4"
                            >
                                <span
                                    class="border border-zinc-700 px-2 py-1 text-zinc-400"
                                    >No holds barred</span
                                >
                                <span
                                    class="btn-striped-light border border-rg-red/60 px-2 py-1 text-rg-red"
                                    >Submission only</span
                                >
                            </div>
                            <h3
                                class="text-2xl font-bebas text-brand-bone mb-2 group-hover:text-brand-gold transition-colors uppercase"
                            >
                                Robgrappler vs Nocturmex 3
                            </h3>
                            <p class="text-gray-400 text-sm mb-6 line-clamp-2">
                                Brutal back‑and‑forth. Two powerful wrestlers
                                collide in a relentless, sweat‑drenched war of
                                attrition.
                            </p>
                            <a
                                href="https://view.wf/v/jxdekpgw"
                                target="_blank"
                                rel="noreferrer"
                                class="btn-brutal mt-auto w-full py-3 bg-brand-gold text-brand-black font-bebas text-lg tracking-wide rounded-none border border-brand-gold shadow-[4px_4px_0px_0px_#FFFFFF] hover:shadow-[1px_1px_0px_0px_#FFFFFF] hover:translate-x-[3px] hover:translate-y-[3px] transition-all duration-200 text-center"
                            >
                                Watch match
                            </a>
                        </div>
                    </div>

                    {/* Match 2 */}
                    <div
                        class="group bg-[#0A0A10] border border-white/10 rounded-none flex flex-col h-full transition-all duration-300 hover:border-brand-gold/50"
                    >
                        <div class="relative aspect-video overflow-hidden">
                            <img
                                src="/images/thumb_storm.png"
                                alt="Close‑angle submission storm"
                                class="absolute inset-0 h-full w-full object-cover opacity-80 transition-all duration-500 group-hover:opacity-100 group-hover:scale-[1.03]"
                            />
                            <div
                                class="absolute inset-x-0 bottom-0 h-24 bg-gradient-to-t from-black/80 to-transparent"
                            >
                            </div>
                            <div
                                class="absolute bottom-3 right-3 rounded bg-black/80 px-2 py-1 text-[0.7rem] font-semibold tracking-[0.2em] uppercase text-zinc-200 shadow-[2px_2px_0px_0px_#000]"
                            >
                                18:45
                            </div>
                        </div>
                        <div class="flex flex-1 flex-col p-6">
                            <div
                                class="flex flex-wrap gap-2 text-[0.6rem] font-semibold tracking-[0.24em] uppercase mb-4"
                            >
                                <span
                                    class="border border-zinc-700 px-2 py-1 text-zinc-400"
                                    >Tournament</span
                                >
                                <span
                                    class="border border-zinc-700 px-2 py-1 text-zinc-400"
                                    >Close‑up</span
                                >
                            </div>
                            <h3
                                class="text-2xl font-bebas text-brand-bone mb-2 group-hover:text-brand-gold transition-colors uppercase"
                            >
                                Close‑angle submission storm
                            </h3>
                            <p class="text-gray-400 text-sm mb-6 line-clamp-2">
                                Rob's 35th kickoff. Birthday‑bash tournament
                                debut bout. Fast‑paced scrambles captured in
                                disgusting detail.
                            </p>
                            <a
                                href="https://view.wf/v/dijjihtm"
                                target="_blank"
                                rel="noreferrer"
                                class="btn-brutal mt-auto w-full py-3 bg-brand-gold text-brand-black font-bebas text-lg tracking-wide rounded-none border border-brand-gold shadow-[4px_4px_0px_0px_#FFFFFF] hover:shadow-[1px_1px_0px_0px_#FFFFFF] hover:translate-x-[3px] hover:translate-y-[3px] transition-all duration-200 text-center"
                            >
                                Watch match
                            </a>
                        </div>
                    </div>

                    {/* Match 3 */}
                    <div
                        class="group bg-[#0A0A10] border border-white/10 rounded-none flex flex-col h-full transition-all duration-300 hover:border-brand-gold/50"
                    >
                        <div class="relative aspect-video overflow-hidden">
                            <img
                                src="/images/Screenshot%202025-12-11%20at%204.09.49.png"
                                alt="From intense to caress"
                                class="absolute inset-0 h-full w-full object-cover opacity-80 transition-all duration-500 group-hover:opacity-100 group-hover:scale-[1.03]"
                            />
                            <div
                                class="absolute inset-x-0 bottom-0 h-24 bg-gradient-to-t from-black/80 to-transparent"
                            >
                            </div>
                            <div
                                class="absolute bottom-3 right-3 rounded bg-black/80 px-2 py-1 text-[0.7rem] font-semibold tracking-[0.2em] uppercase text-zinc-200 shadow-[2px_2px_0px_0px_#000]"
                            >
                                22:15
                            </div>
                            <div
                                class="absolute top-2 right-2 bg-white/10 text-zinc-100 text-[0.6rem] font-bold px-2 py-1 rounded-none shadow-[2px_2px_0px_0px_#000] uppercase tracking-wider backdrop-blur"
                            >
                                Fan favorite
                            </div>
                        </div>
                        <div class="flex flex-1 flex-col p-6">
                            <div
                                class="flex flex-wrap gap-2 text-[0.6rem] font-semibold tracking-[0.24em] uppercase mb-4"
                            >
                                <span
                                    class="border border-zinc-700 px-2 py-1 text-zinc-400"
                                    >Open weight</span
                                >
                                <span
                                    class="btn-striped-light border border-purple-400/70 px-2 py-1 text-purple-300"
                                    >Hunks</span
                                >
                            </div>
                            <h3
                                class="text-2xl font-bebas text-brand-bone mb-2 group-hover:text-brand-gold transition-colors uppercase"
                            >
                                From intense to caress
                            </h3>
                            <p class="text-gray-400 text-sm mb-6 line-clamp-2">
                                First erotic match with Dexter Glitch. Starts as
                                a grinding pressure war and mutates into
                                something else entirely.
                            </p>
                            <a
                                href="https://view.wf/v/thfefpll"
                                target="_blank"
                                rel="noreferrer"
                                class="btn-brutal mt-auto w-full py-3 bg-brand-gold text-brand-black font-bebas text-lg tracking-wide rounded-none border border-brand-gold shadow-[4px_4px_0px_0px_#FFFFFF] hover:shadow-[1px_1px_0px_0px_#FFFFFF] hover:translate-x-[3px] hover:translate-y-[3px] transition-all duration-200 text-center"
                            >
                                Watch match
                            </a>
                        </div>
                    </div>
                </div>
            </SectionShell>
        </section>

        <!-- Pricing / Subs -->
        <section
            id="pricing"
            class="py-24 bg-brand-purple relative overflow-hidden"
        >
            <!-- Decorative Glow -->
            <div
                class="absolute top-0 right-0 w-[500px] h-[500px] bg-brand-gold rounded-full blur-[150px] opacity-10 pointer-events-none"
            >
            </div>

            <div class="max-w-7xl mx-auto px-4 relative z-10">
                <div class="text-center mb-16">
                    <h2
                        class="text-5xl md:text-6xl font-bebas text-brand-bone mb-4"
                    >
                        Choose Your Level
                    </h2>
                    <p class="text-gray-400 max-w-lg mx-auto">
                        Pay for what you watch, or unlock the vault. Cancel
                        anytime.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto items-center"
                >
                    <!-- Tier 1 -->
                    <div
                        class="bg-brand-black/50 border border-white/10 p-8 rounded-none backdrop-blur-sm"
                    >
                        <h3 class="text-2xl font-bebas text-gray-300 mb-2">
                            The Voyeur
                        </h3>
                        <div class="text-3xl font-bold text-white mb-6">
                            $9.99 <span
                                class="text-sm font-normal text-gray-500"
                                >/ match</span
                            >
                        </div>
                        <ul class="space-y-4 mb-8 text-sm text-gray-400">
                            <li class="flex items-center">
                                <span class="text-brand-gold mr-2 text-lg"
                                    >•</span
                                > Single match access
                            </li>
                            <li class="flex items-center">
                                <span class="text-brand-gold mr-2 text-lg"
                                    >•</span
                                > Lifetime ownership
                            </li>
                            <li class="flex items-center">
                                <span class="text-brand-gold mr-2 text-lg"
                                    >•</span
                                > HD Download
                            </li>
                        </ul>
                        <a
                            href="#"
                            class="btn-brutal block w-full py-3 text-center border-2 border-white/20 text-white hover:border-white hover:bg-white hover:text-brand-black font-bebas tracking-wide transition-all rounded-none hover:shadow-[4px_4px_0px_0px_#F5C265]"
                        >
                            Buy Single
                        </a>
                    </div>

                    <!-- Tier 2 (Recommended) -->
                    <div
                        class="bg-[#151520] border-2 border-brand-gold p-8 rounded-none relative transform scale-105 shadow-[8px_8px_0px_0px_#000]"
                    >
                        <div
                            class="absolute -top-4 left-1/2 -translate-x-1/2 bg-brand-gold text-brand-black text-xs font-bold uppercase px-4 py-1 rounded-none border border-black tracking-wider"
                        >
                            Most Popular
                        </div>
                        <h3 class="text-3xl font-bebas text-white mb-2">
                            Mat Rat
                        </h3>
                        <div class="text-4xl font-bold text-white mb-6">
                            $29 <span class="text-sm font-normal text-gray-500"
                                >/ month</span
                            >
                        </div>
                        <ul class="space-y-4 mb-8 text-sm text-gray-300">
                            <li class="flex items-center">
                                <span class="text-brand-gold mr-2 text-lg"
                                    >•</span
                                > Full Archive Access
                            </li>
                            <li class="flex items-center">
                                <span class="text-brand-gold mr-2 text-lg"
                                    >•</span
                                > New Matches Weekly
                            </li>
                            <li class="flex items-center">
                                <span class="text-brand-gold mr-2 text-lg"
                                    >•</span
                                > Exclusive BTS Content
                            </li>
                            <li class="flex items-center">
                                <span class="text-brand-gold mr-2 text-lg"
                                    >•</span
                                > Cancel Anytime
                            </li>
                        </ul>
                        <a
                            href="#"
                            class="btn-brutal block w-full py-4 text-center bg-brand-gold text-brand-black border-2 border-brand-gold hover:bg-white hover:border-white font-bebas text-xl tracking-wide transition-all rounded-none shadow-[6px_6px_0px_0px_#FFFFFF] hover:shadow-[2px_2px_0px_0px_#FFFFFF] hover:translate-x-[4px] hover:translate-y-[4px]"
                        >
                            Subscribe Now
                        </a>
                    </div>

                    <!-- Tier 3 -->
                    <div
                        class="bg-brand-black/50 border border-white/10 p-8 rounded-none backdrop-blur-sm"
                    >
                        <h3 class="text-2xl font-bebas text-brand-gold mb-2">
                            VIP Lifetime
                        </h3>
                        <div class="text-3xl font-bold text-white mb-6">
                            $299 <span class="text-sm font-normal text-gray-500"
                                >/ one-time</span
                            >
                        </div>
                        <ul class="space-y-4 mb-8 text-sm text-gray-400">
                            <li class="flex items-center">
                                <span class="text-brand-gold mr-2 text-lg"
                                    >•</span
                                > Everything in Monthly
                            </li>
                            <li class="flex items-center">
                                <span class="text-brand-gold mr-2 text-lg"
                                    >•</span
                                > Private Discord Access
                            </li>
                            <li class="flex items-center">
                                <span class="text-brand-gold mr-2 text-lg"
                                    >•</span
                                > Merch Discount Codes
                            </li>
                        </ul>
                        <a
                            href="#"
                            class="btn-brutal block w-full py-3 text-center border-2 border-white/20 text-white hover:border-brand-gold hover:text-brand-gold font-bebas tracking-wide transition-all rounded-none hover:shadow-[4px_4px_0px_0px_#F5C265]"
                        >
                            Go VIP
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- About -->
        <section
            id="about"
            class="py-24 bg-brand-black border-t border-white/5"
        >
            <div class="max-w-7xl mx-auto px-4">
                <div
                    class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center"
                >
                    <div class="order-2 lg:order-1">
                        <div
                            class="relative h-[400px] w-full bg-[#111] rounded-none overflow-hidden group border border-white/10"
                        >
                            <!-- Visual Placeholder -->
                            <div
                                class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-gray-800 to-black"
                            >
                            </div>
                            <div
                                class="absolute inset-0 flex items-center justify-center"
                            >
                                <svg
                                    class="w-24 h-24 text-gray-700 group-hover:text-brand-gold transition-colors duration-500"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 14H9V8h2v8zm4 0h-2V8h2v8z"
                                    ></path></svg
                                >
                            </div>
                            <div
                                class="absolute bottom-4 left-4 border-l-2 border-brand-gold pl-3"
                            >
                                <p
                                    class="text-brand-bone font-bebas tracking-wide text-lg"
                                >
                                    Robgrappler Gym
                                </p>
                                <p class="text-gray-500 text-xs uppercase">
                                    Est. 2024
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="order-1 lg:order-2">
                        <h2
                            class="text-4xl md:text-5xl font-bebas text-brand-bone mb-6"
                        >
                            This isn't sport BJJ.<br />It's barely legal.
                        </h2>
                        <div class="space-y-4 text-gray-400 leading-relaxed">
                            <p>
                                Robgrappler started as an invite-only open mat
                                in a basement in East London. We didn't care
                                about points, advantages, or referee decisions.
                                We cared about breaking mechanics and dominant
                                control.
                            </p>
                            <p>
                                Today, we film high-level grapplers who want to
                                test themselves without the constraints of
                                modern sport rulesets. No time limit sub-only
                                rounds, intensity ramped up to 11.
                            </p>
                            <p>
                                We don't sell drama. We sell the most technical
                                violence you can find on the internet.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- FAQ -->
        <section id="faq" class="py-24 bg-brand-purple/20">
            <div class="max-w-3xl mx-auto px-4">
                <h2
                    class="text-4xl font-bebas text-brand-bone text-center mb-12"
                >
                    Common Questions
                </h2>

                <div class="space-y-4">
                    <!-- Q1 -->
                    <div
                        class="border border-white/10 bg-brand-black/50 rounded-none"
                    >
                        <button
                            class="w-full px-6 py-4 text-left flex justify-between items-center focus:outline-none"
                            onclick="document.getElementById('q1-content').classList.toggle('hidden'); document.getElementById('q1-icon').innerText = document.getElementById('q1-content').classList.contains('hidden') ? '+' : '-';"
                        >
                            <span class="text-lg font-bold text-gray-200"
                                >How do I watch purchased matches?</span
                            >
                            <span
                                id="q1-icon"
                                class="text-brand-gold text-2xl transform transition-transform duration-200"
                                >+</span
                            >
                        </button>
                        <div
                            id="q1-content"
                            class="hidden px-6 pb-4 text-gray-400 text-sm"
                        >
                            Once you purchase a match or subscribe, you get
                            instant access to your library dashboard. You can
                            stream in 4K or download the MP4 files for offline
                            viewing. No DRM bullshit.
                        </div>
                    </div>
                    <!-- Q2 -->
                    <div
                        class="border border-white/10 bg-brand-black/50 rounded-none"
                    >
                        <button
                            class="w-full px-6 py-4 text-left flex justify-between items-center focus:outline-none"
                            onclick="document.getElementById('q2-content').classList.toggle('hidden'); document.getElementById('q2-icon').innerText = document.getElementById('q2-content').classList.contains('hidden') ? '+' : '-';"
                        >
                            <span class="text-lg font-bold text-gray-200"
                                >Is this content real?</span
                            >
                            <span
                                id="q2-icon"
                                class="text-brand-gold text-2xl transform transition-transform duration-200"
                                >+</span
                            >
                        </button>
                        <div
                            id="q2-content"
                            class="hidden px-6 pb-4 text-gray-400 text-sm"
                        >
                            100%. If it looks painful, it is. We vet all
                            athletes to ensure they are high-level competitors.
                            No works, no scripts.
                        </div>
                    </div>
                    <!-- Q3 -->
                    <div
                        class="border border-white/10 bg-brand-black/50 rounded-none"
                    >
                        <button
                            class="w-full px-6 py-4 text-left flex justify-between items-center focus:outline-none"
                            onclick="document.getElementById('q3-content').classList.toggle('hidden'); document.getElementById('q3-icon').innerText = document.getElementById('q3-content').classList.contains('hidden') ? '+' : '-';"
                        >
                            <span class="text-lg font-bold text-gray-200"
                                >Can I cancel my subscription?</span
                            >
                            <span
                                id="q3-icon"
                                class="text-brand-gold text-2xl transform transition-transform duration-200"
                                >+</span
                            >
                        </button>
                        <div
                            id="q3-content"
                            class="hidden px-6 pb-4 text-gray-400 text-sm"
                        >
                            Yes. One click in your account settings. We don't
                            make you call anyone or jump through hoops.
                        </div>
                    </div>
