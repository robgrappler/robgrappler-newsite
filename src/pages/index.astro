<style>
    /* 1. The Glitch Effect logic */
    .glitch-text {
        position: relative;
    }
    .glitch-text::before,
    .glitch-text::after {
        content: attr(data-text);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: #020308; /* Matches your brand-black bg to hide the original text */
        opacity: 0.8;
    }
    .glitch-text::before {
        left: 2px;
        text-shadow: -1px 0 #ff00c1; /* Cyber magenta offset */
        clip-path: inset(44px 0 56px 0);
        animation: glitch-anim 5s infinite linear alternate-reverse;
    }
    .glitch-text::after {
        left: -2px;
        text-shadow: -1px 0 #00fff9; /* Cyan offset */
        clip-path: inset(25px 0 96px 0);
        animation: glitch-anim2 5s infinite linear alternate-reverse;
    }

    /* 2. The Title Scanline - AGGRESSIVE UPDATE */
    .rg-scanline {
        will-change: background-position;
        mix-blend-mode: hard-light; /* Makes the gold burn into the white text */
        
        background: linear-gradient(
            to bottom,
            transparent 0%,
            rgba(245, 194, 101, 0.0) 20%,
            rgba(245, 194, 101, 0.3) 45%,
            rgba(245, 194, 101, 0.8) 50%, /* 80% opacity core beam */
            rgba(245, 194, 101, 0.3) 55%, 
            rgba(245, 194, 101, 0.0) 80%,
            transparent 100%
        );
        background-size: 100% 200%;
        animation: scanTitle 3s linear infinite;
    }

    @keyframes scanTitle {
        0% { background-position: 0% -100%; }
        100% { background-position: 0% 200%; }
    }

    @keyframes glitch-anim {
        0% { clip-path: inset(38px 0 49px 0); }
        5% { clip-path: inset(72px 0 24px 0); }
        10% { clip-path: inset(10px 0 88px 0); }
        15% { clip-path: inset(6px 0 6px 0); }
        20% { clip-path: inset(2px 0 2px 0); }
        100% { clip-path: inset(57px 0 11px 0); }
    }
    @keyframes glitch-anim2 {
        0% { clip-path: inset(25px 0 96px 0); }
        5% { clip-path: inset(15px 0 2px 0); }
        10% { clip-path: inset(11px 0 83px 0); }
        15% { clip-path: inset(39px 0 5px 0); }
        20% { clip-path: inset(75px 0 32px 0); }
        100% { clip-path: inset(96px 0 44px 0); }
    }
</style>

