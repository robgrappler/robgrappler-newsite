---
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionShell from "../components/SectionShell.astro";

const pageJsonLd = [
    {
        "@context": "https://schema.org",
        "@type": "VideoObject",
        name: "Robgrappler vs Nocturmex 3",
        description:
            "Brutal back‑and‑forth. Two powerful wrestlers collide in a relentless, sweat‑drenched war of attrition.",
        thumbnailUrl: ["/images/thumb_brutal.jpg"],
        uploadDate: "2025-12-01",
        contentUrl: "https://view.wf/v/jxdekpgw",
    },
    {
        "@context": "https://schema.org",
        "@type": "VideoObject",
        name: "Close‑angle submission storm",
        description:
            "Birthday‑bash tournament debut bout. Fast‑paced scrambles captured in disgusting detail.",
        thumbnailUrl: ["/images/thumb_storm.png"],
        uploadDate: "2025-12-01",
        contentUrl: "https://view.wf/v/dijjihtm",
    },
    {
        "@context": "https://schema.org",
        "@type": "VideoObject",
        name: "From intense to caress",
        description:
            "First erotic match with Dexter Glitch. Starts as a grinding pressure war and mutates into something else entirely.",
        thumbnailUrl: ["/images/Screenshot%202025-12-11%20at%204.09.49.png"],
        uploadDate: "2025-12-01",
        contentUrl: "https://view.wf/v/thfefpll",
    },
];
---

<BaseLayout title="Robgrappler | Enter The Mat" jsonLd={pageJsonLd}>
    <link
        slot="head"
        rel="preload"
        as="image"
        href="/images/mainpic.webp"
        fetchpriority="high"
    />
    <div class="relative">
        <!-- HERO SECTION -->
        <section
            class="hero-pin relative min-h-[90vh] flex items-center bg-brand-black overflow-hidden"
        >
            <!-- Background Image & Gradients -->
            <div class="absolute inset-0 z-0">
                <picture>
                    <source
                        type="image/avif"
                        srcset="/images/mainpic%20copy.avif"
                    />
                    <source type="image/webp" srcset="/images/mainpic.webp" />
                    <img
                        src="/images/mainpic.webp"
                        alt="Grapplers locked up on a dark mat"
                        loading="eager"
                        decoding="async"
                        fetchpriority="high"
                        class="hero-kenburns object-cover object-[78%_28%] w-full h-full opacity-55 scale-[1.02]"
                        onerror="this.style.display='none'; document.getElementById('hero-fallback').classList.remove('hidden');"
                    />
                </picture>
                <!-- HERO OVERLAY (RAW FOOTAGE LOOP) -->
                <video
                    id="hero-loop-atmo"
                    class="hero-loop absolute inset-0 w-full h-full object-cover z-0 opacity-55 hidden"
                    style="display:none"
                    autoplay
                    muted
                    loop
                    playsinline
                    preload="metadata"
                    poster="/media/hero_poster.jpg"
                >
                    <source
                        src="/media/hero_loop_1440p.mp4"
                        type="video/mp4"
                        media="(min-width: 1600px)"
                    />
                    <source
                        src="/media/hero_loop_1080p.mp4"
                        type="video/mp4"
                        media="(min-width: 900px)"
                    />
                    <source src="/media/hero_loop_720p.mp4" type="video/mp4" />
                </video>

                <video
                    id="hero-loop-raw"
                    class="hero-loop absolute inset-0 w-full h-full object-cover z-0 opacity-45 hidden"
                    style="display:none"
                    autoplay
                    muted
                    loop
                    playsinline
                    preload="metadata"
                >
                    <source
                        src="/videos/hero_DSCF2957_0300-0560.mp4"
                        type="video/mp4"
                    />
                </video>

                <!-- HERO MICRO-MOTION (RAW FEED) -->
                <div class="absolute inset-0 z-5 pointer-events-none">
                    <div
                        class="hero-microbox absolute bottom-4 right-4 md:bottom-6 md:right-6 w-[40%] md:w-1/4 h-[25%] md:h-[30%] overflow-hidden"
                    >
                        <div
                            class="hero-video-loading absolute inset-0 z-30 flex items-center justify-center bg-black/70 text-[0.65rem] font-bold tracking-[0.28em] uppercase text-brand-gold"
                            data-video-loading
                        >
                            <span class="lang-en">Loading</span>
                            <span class="lang-es hidden">Cargando</span>
                        </div>
                        <!-- Label -->
                        <div class="absolute top-2 left-2 z-20">
                            <span class="hero-microlabel">
                                <span class="lang-en">RAW FOOTAGE</span>
                                <span class="lang-es hidden"
                                    >MATERIAL SIN FILTRO</span
                                >
                            </span>
                        </div>

                        <video
                            class="hero-microvideo w-full h-full object-cover opacity-95"
                            id="hero-micro-video"
                            data-hero-video
                            autoplay
                            muted
                            loop
                            playsinline
                            preload="metadata"
                            style="object-position: 60% 40%; transform: scale(1.3);"
                        >
                            <source
                                src="/media/hero_loop_720p.mp4"
                                type="video/mp4"
                            />
                            <source
                                src="/media/hero_loop_1080p.mp4"
                                type="video/mp4"
                            />
                            <source
                                src="/media/hero_loop_1440p.mp4"
                                type="video/mp4"
                            />
                        </video>

                        <!-- Darken + grit overlay so it feels physical, not glassy UI -->
                        <div class="hero-microoverlay absolute inset-0 z-10">
                        </div>
                    </div>
                </div>

                <div
                    id="hero-fallback"
                    class="hidden absolute inset-0 bg-gradient-to-br from-brand-purple via-brand-black to-black opacity-80"
                >
                </div>
                <div
                    class="absolute inset-0 bg-gradient-to-r from-brand-black/70 via-brand-black/50 to-transparent"
                >
                </div>
            </div>

            <!-- Hero Content -->
            <div
