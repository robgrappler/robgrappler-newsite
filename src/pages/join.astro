---
import JoinTierCard from "../components/JoinTierCard.astro";
import StickyCta from "../components/StickyCta.astro";
---

<html lang="en">
    <head
        ><meta charset="utf-8" /><meta
            name="viewport"
            content="width=device-width, initial-scale=1"
        /></head
    >
    <body>
        <JoinTierCard price="$X / month" />
        <StickyCta
            href="/checkout"
            label="Join now"
            subtext="Full matches. Full access."
        />
        <style>
            body {
                margin: 0;
                background: #050505;
                color: #f2f2f2;
                font-family: ui-sans-serif, system-ui;
            }
        </style>
    </body>
</html>
